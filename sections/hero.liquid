<div data-section-id="{{ section.id }}" data-section-type="hero-section">
  <style>
    .hero-container {
      width: 100vw;
      height: 80vh;
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("{{ section.settings.hero_image | img_url: 'master' }}");
      background-size: cover;
      text-align: center;
      padding-top: 30vh;
    }
    #hero-title {
      color: white;
      font-size: 36px;
    }
    #hero-button {
      padding: 10px 14px;
      color: white;
      background-color: #0275d8;
      border-radius: 10px;
      font-weight: 700;
      font-size: 16px;
    }
  </style>
  <div class="hero-container">
    <h2 id="hero-title">{{ section.settings.hero_title }}</h2>
    <a href="" id="hero-button">{{ section.settings.button_text}}</a>
  </div>
</div>

{% schema %}
{
  "name": "Hero Image + Text",
  "class": "index-section index-section--flush",
  "settings": [{
    "id": "hero_title",
    "type": "text",
    "label": "Hero Header",
    "info": "Title that will be displayed in the hero image above the button."
  },
  {
    "id": "button_text",
    "type": "text",
    "label": "Button Text",
    "info": "Text that will be displayed on the button in the hero image."
  },
  {
    "id": "hero_image",
    "type": "image_picker",
    "label": "Hero Image",
    "info": "Image that will cover the background in the hero section."
  }],
  "presets": [
    {
      "name": "Image with text overlay",
      "category": "Image"
    }
  ]
}
{% endschema %}
